{
  "name": "gqltypes",
  "version": "1.0.0",
  "description": "Generate typescript from graphql schema",
  "scripts": {
    "intro": "npx apollo-codegen introspect-schema ../../src/main/resources/graphql/bonpublic.graphqls --output schema.json",
    "types": "npx apollo-codegen generate ../../src/main/resources/graphql/operations/**/*.graphql --schema schema.json --target typescript --output ../../src/main/webapp/app/bonpublicgraphql/bonpublicgraphql-types.ts",
    "gqltypes": "npm run intro && npm run types"
  },
  "author": "jofr",
  "devDependencies": {
    "apollo-codegen": "^0.20.2"
  }
}
